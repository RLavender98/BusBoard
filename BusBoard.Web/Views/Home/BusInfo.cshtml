@using BusBoard.Api
@model BusBoard.Web.ViewModels.BusInfo
@{
  ViewBag.Title = "Bus Information";
}

<h2>BusInfo</h2>

<div class="row">
    <p>You entered postcode @Model.PostCode</p>
    <p>The nearest bus stops and the next buses are: </p>
    @foreach (var s in Model.NearestStops)
    {
        <text>Bus Stop: @s.CommonName<br/></text>
        foreach (var bus in s.ArrivingBuses)
        {
            <text>@bus.LineId, @bus.DestinationName, @bus.TimeToStation<br/></text>
        } 
    }
    
    
</div>
